<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.control.cell.*?>
<?import javafx.scene.effect.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.paint.*?>
<?import javafx.scene.shape.*?>
<?import javafx.scene.text.*?>

<VBox alignment="TOP_CENTER" prefHeight="555.0" prefWidth="1347.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="adminclerksdts.learner.ViewLearner">
    <children>
        <VBox alignment="CENTER" prefHeight="93.0" prefWidth="1369.0" spacing="10">
            <children>
                <Text stroke="#862222" strokeWidth="0.8" text="View Learners" textAlignment="CENTER">
                    <fill>
                        <LinearGradient endX="1.0" endY="0.7095238095238094" startX="1.0" startY="0.5">
                            <stops>
                                <Stop color="#403f36" />
                                <Stop color="BLACK" offset="1.0" />
                            </stops>
                        </LinearGradient>
                    </fill>
                    <font>
                        <Font name="Berlin Sans FB Demi Bold" size="51.0" />
                    </font>
                </Text>
                <HBox alignment="CENTER" spacing="10">
                    <children>
                        <Label text="Search" HBox.hgrow="ALWAYS" />
                        <TextField fx:id="searchField" promptText="Search Learners" HBox.hgrow="ALWAYS" />
                        <Button mnemonicParsing="false" onAction="#handleSearchAction"  text="Search" />
                    </children>
                </HBox>
            </children>
        </VBox>

        <TableView fx:id="learnerTable" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="learnerIdColumn" text="Learner ID">
                    <cellValueFactory>
                        <PropertyValueFactory property="learnerId" />
                    </cellValueFactory>
                </TableColumn>
                <TableColumn fx:id="usernameColumn" text="Username">
                    <cellValueFactory>
                        <PropertyValueFactory property="username" />
                    </cellValueFactory>
                </TableColumn>
                <TableColumn fx:id="passwordColumn" text="Password">
                    <cellValueFactory>
                        <PropertyValueFactory property="Password" />
                    </cellValueFactory>
                </TableColumn>
                <TableColumn fx:id="fullNameColumn" text="Surname, First name">
                    <cellValueFactory>
                        <PropertyValueFactory property="fullName" />
                    </cellValueFactory>
                </TableColumn>
                <TableColumn fx:id="dateOfBirthColumn" text="Date of Birth">
                    <cellValueFactory>
                        <PropertyValueFactory property="dateOfBirth" />
                    </cellValueFactory>
                </TableColumn>
                <TableColumn fx:id="emailColumn" text="Email">
                    <cellValueFactory>
                        <PropertyValueFactory property="email" />
                    </cellValueFactory>
                </TableColumn>
                <TableColumn fx:id="addressColumn" text="Address">
                    <cellValueFactory>
                        <PropertyValueFactory property="address" />
                    </cellValueFactory>
                </TableColumn>
                <TableColumn fx:id="contactNumberColumn" text="Contact Number">
                    <cellValueFactory>
                        <PropertyValueFactory property="contactNumber" />
                    </cellValueFactory>
                </TableColumn>
                <TableColumn fx:id="activePackageIdColumn" text="Active Package ID">
                    <cellValueFactory>
                        <PropertyValueFactory property="activePackageId" />
                    </cellValueFactory>
                </TableColumn>
                <TableColumn fx:id="idNumberColumn" text="ID Number">
                    <cellValueFactory>
                        <PropertyValueFactory property="idNumber" />
                    </cellValueFactory>
                </TableColumn>
                <TableColumn fx:id="registrationDateColumn" text="Registration Date">
                    <cellValueFactory>
                        <PropertyValueFactory property="registrationDate" />
                    </cellValueFactory>
                </TableColumn>
                <TableColumn fx:id="genderColumn" text="Gender">
                    <cellValueFactory>
                        <PropertyValueFactory property="gender" />
                    </cellValueFactory>
                </TableColumn>
                <TableColumn fx:id="emergencyContactColumn" text="Emergency Contact">
                    <cellValueFactory>
                        <PropertyValueFactory property="emergencyContact" />
                    </cellValueFactory>
                </TableColumn>
                <TableColumn fx:id="preferredLanguageColumn" text="Preferred Language">
                    <cellValueFactory>
                        <PropertyValueFactory property="preferredLanguage" />
                    </cellValueFactory>
                </TableColumn>
                <TableColumn fx:id="previousExperienceColumn" text="Previous Experience">
                    <cellValueFactory>
                        <PropertyValueFactory property="previousExperience" />
                    </cellValueFactory>
                </TableColumn>
                <TableColumn fx:id="packageTypeColumn" text="Package Type">
                    <cellValueFactory>
                        <PropertyValueFactory property="packageType" />
                    </cellValueFactory>
                </TableColumn>
                <TableColumn fx:id="notesColumn" text="Notes">
                    <cellValueFactory>
                        <PropertyValueFactory property="notes" />
                    </cellValueFactory>
                </TableColumn>
                <TableColumn fx:id="statusColumn" text="Status">
                    <cellValueFactory>
                        <PropertyValueFactory property="status" />
                    </cellValueFactory>
                </TableColumn>
            </columns>
            <contextMenu>
                <ContextMenu>
                    <items>
                        <MenuItem mnemonicParsing="false" text="New" />
                        <MenuItem mnemonicParsing="false" text="Edit" />
                        <MenuItem mnemonicParsing="false" text="Delete" />
                    </items>
                </ContextMenu>
            </contextMenu>
        </TableView>

        <HBox alignment="CENTER" spacing="10">
            <children>
                <Button mnemonicParsing="false" onAction="#LoadLearners" text="Load Learners">
                    <font>
                        <Font name="System Bold" size="20.0" />
                    </font>
                </Button>
                <Button mnemonicParsing="false" onAction="#EditLearner" text="Edit">
                    <font>
                        <Font name="System Bold" size="20.0" />
                    </font>
                </Button>
                <Button mnemonicParsing="false" onAction="#DeleteLearner" text="Delete">
                    <font>
                        <Font name="System Bold" size="20.0" />
                    </font>
                </Button>
                <Button alignment="CENTER" contentDisplay="CENTER" onAction="#handleBackButtonAction" prefHeight="62.0" prefWidth="138.0" style="-fx-background-color: #ec0111;" text="Back" textAlignment="CENTER" textFill="WHITE">
                    <font>
                        <Font name="Arial Unicode MS" size="30.0" />
                    </font>
                </Button>
                <Button mnemonicParsing="false" onAction="#NewLearner" text="New Learner">
                    <font>
                        <Font name="System Bold" size="20.0" />
                    </font>
                </Button>
            </children>
        </HBox>
    </children>
</VBox>
