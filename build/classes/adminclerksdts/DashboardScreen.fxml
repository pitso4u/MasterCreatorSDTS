<BorderPane fx:id="dashboardBorderpane" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="adminclerksdts.DashboardScreen">
    <left>
        <ScrollPane fitToWidth="true" hbarPolicy="NEVER" styleClass="menu-scroll-pane">
            <VBox fx:id="menuBar" minWidth="180" maxWidth="200" spacing="10" styleClass="menu-bar">
                <padding>
                    <Insets bottom="20" left="10" right="10" top="20" />
                </padding>
                <children>
                    <Label styleClass="title-text" text="SmartDrive" textFill="black" />
                    <Button onAction="#handleDashboardButtonAction" maxWidth="Infinity" styleClass="menu-item" text="Dashboard" />
                    <Button onAction="#handleViewLearnersButtonAction" maxWidth="Infinity" styleClass="menu-item" text="Learners" />
                    <Button onAction="#handleClassSchedulingButtonAction" maxWidth="Infinity" styleClass="menu-item" text="Scheduling" />
                    <Button onAction="#handleTestAdminButtonAction" maxWidth="Infinity" styleClass="menu-item" text="Tests Questions" />
                    <Button onAction="#handleProgressTrackingButtonAction" maxWidth="Infinity" styleClass="menu-item" text="Progress Tracking" />
                    <Button onAction="#handleSummaryReportButtonAction" maxWidth="Infinity" styleClass="menu-item" text="Summary Report" />
                    <Button onAction="#handleSettingsButtonAction" maxWidth="Infinity" styleClass="menu-item" text="Settings" />
                    <Region VBox.vgrow="ALWAYS" />
                    <Button onAction="#handleExitButtonAction" maxWidth="Infinity" styleClass="exit-button" text="Exit" />
                </children>
            </VBox>
        </ScrollPane>
    </left>
    <center>
        <ScrollPane fitToWidth="true" fitToHeight="true">
            <StackPane fx:id="contentArea" style="-fx-background-color: #ffed4b;">
                <!-- Content will be loaded here dynamically -->
            </StackPane>
        </ScrollPane>
    </center>
    <top>
        <VBox alignment="TOP_CENTER">
            <children>
                <ImageView fitHeight="100.0" preserveRatio="true">
                    <image>
                        <Image url="@/Images/bakubungwebsitebanner.jpg" />
                    </image>
                    <effect>
                        <Reflection bottomOpacity="0.0" fraction="0.9" topOpacity="0.0" />
                    </effect>
                </ImageView>
            </children>
        </VBox>
    </top>
</BorderPane>
